@model List<ReportTA.Models.TaxRequest>

@{
    ViewData["Title"] = "Tax History";
}

<div class="container mt-5">
    <h2 class="text-center">Tax History</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Income</th>
                    <th>Tax Regime</th>
                    <th>Tax Amount</th>
                    <th>Cess (4%)</th>
                    <th>Total Tax Payable</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tax in Model)
                {
                    <tr>
                        <td>@tax.Income</td>
                        <td>@tax.Regime</td>
                        <td>@tax.TaxAmount</td>
                        <td>@tax.Cess</td>
                        <td>@tax.TotalTaxPayable</td>
                        <td>@tax.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No tax history available.</p>
    }
</div>
